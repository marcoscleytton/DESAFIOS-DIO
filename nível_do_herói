# Função para classificar o nível do herói com base no XP
def classificar_heroi(nome, xp):
    if xp < 1000:
        nivel = "Ferro"
    elif xp <= 2000:
        nivel = "Bronze"
    elif xp <= 5000:
        nivel = "Prata"
    elif xp <= 7000:
        nivel = "Ouro"
    elif xp <= 8000:
        nivel = "Platina"
    elif xp <= 9000:
        nivel = "Ascendente"
    elif xp <= 10000:
        nivel = "Imortal"
    else:
        nivel = "Radiante"

    # Exibir a mensagem final
    print(f"O Herói de nome {nome} está no nível de {nivel}")

# Exemplo de uso
nome_heroi = "Arthur"
xp_heroi = 7500
classificar_heroi(nome_heroi, xp_heroi)
